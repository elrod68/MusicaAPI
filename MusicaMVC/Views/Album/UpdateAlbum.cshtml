@model Album
@{ Layout = "_Layout"; ViewBag.Title = "Update album";}

<h2>Update an album <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form method="post" asp-action="UpdateAlbum">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="ID"></label>
        <input class="form-control" asp-for="ID" readonly />
    </div>
    <div class="form-group">
        <label asp-for="AlbumName">Name:</label>
        <input asp-for="AlbumName" class="form-control" />
        <span asp-validation-for="AlbumName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ArtistName">Artist:</label>
        <input asp-for="ArtistName" class="form-control" />
        <span asp-validation-for="ArtistName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AlbumLabel">Label:</label>
        <input asp-for="AlbumLabel" class="form-control" />
        <span asp-validation-for="AlbumLabel" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AlbumTypeId">Label:</label>
        @Html.DropDownListFor(model => Model.AlbumTypeId, Album.AlbumTypes().Result.Select(x => new SelectListItem { Text = x.AlbumTypeDescr, Value = x.AlbumTypeId.ToString() }))
        <span asp-validation-for="AlbumTypeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AlbumStock">Stock quantity:</label>
        <input asp-for="AlbumStock" class="form-control" />
        <span asp-validation-for="AlbumStock" class="text-danger"></span>
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Update album</button>
    </div>
</form>

@if (ViewBag.Result == "Success")
{
    <h2>Album</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>Name</th>
                <th>Artist</th>
                <th>Label</th>
                <th>Stock</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.ID</td>

                <td>@Model.AlbumName</td>

                <td>@Model.ArtistName</td>

                <td>@Model.AlbumLabel</td>

                <td>@Model.AlbumStock</td>
            </tr>
        </tbody>
    </table>
}